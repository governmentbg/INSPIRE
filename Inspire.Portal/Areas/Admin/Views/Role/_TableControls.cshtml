@using Inspire.Common.Mvc.Extensions
@using Inspire.Portal.App_GlobalResources
@using Inspire.Portal.Areas.Admin.Controllers
@{
    var controllerType = typeof(RoleController);
    if (controllerType.HasRightsToAction("Upsert"))
    {
        <a href="@Url.DynamicAction("Upsert", controllerType)" title="@Resource.CreateRole">
            <svg class='icon'>
                <use xlink:href='#icon-plus'></use>
            </svg>
            @Resource.Create
        </a>
    }
}
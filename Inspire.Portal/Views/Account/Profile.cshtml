@using Inspire.Common.Mvc.Infrastructure.BaseTypes
@using Inspire.Portal.App_GlobalResources
@using Inspire.Portal.Utilities
@using Inspire.Utilities.Extensions
@model Inspire.Model.User.User
@{
    if (ViewContext.Controller is BaseController baseController)
    {
        baseController.InitViewTitleAndBreadcrumbs(Resource.Profile);
    }
}

@section Breadcrumbs
{
    @{
        Html.RenderPartial("_Breadcrums");
    }
}

<div class="content-pre-wrap">
    <div class="center">
        <div class="info-table">
            <div class="info-row">
                <div class="info-title">
                    @Resource.Username
                </div>
                <div class="info-text">
                    @Model.UserName
                </div>
            </div>
            <div class="info-row">
                <div class="info-title">
                    @Resource.Email
                </div>
                <div class="info-text">
                    @Model.Email
                </div>
            </div>

            <div class="info-row">
                <div class="info-title">
                    @Resource.Name
                </div>
                <div class="info-text">
                    @($"{Model.FirstName} {Model.LastName}")
                </div>
            </div>

            <div class="info-row">
                <div class="info-title">
                    @Resource.Phone
                </div>
                <div class="info-text">
                    @Model.Phone
                </div>
            </div>

            <div class="info-row">
                <div class="info-title">
                    @Resource.Fax
                </div>
                <div class="info-text">
                    @Model.Fax
                </div>
            </div>

            <div class="info-row">
                <div class="info-title">
                    @Resource.Status
                </div>
                <div class="info-text">
                    @(Model.Status != null && Model.Status.Name.IsNotNullOrEmpty() ? Model.Status.Name : string.Empty)
                </div>
            </div>

            <div class="info-row">
                <div class="info-title">
                    @Resource.Department
                </div>
                <div class="info-text">
                    @Model.Department
                </div>
            </div>
        </div>
    </div>
</div>